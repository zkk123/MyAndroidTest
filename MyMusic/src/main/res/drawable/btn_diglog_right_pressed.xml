<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
    <shape>
        <solid android:color="#3bbaff" />
        <!--圆角-->
        <corners android:topRightRadius="10dp" />
    </shape>
</item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#a5d8f5" />
            <corners android:radius="10dp" />
            <padding android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
        </shape>
    </item>
</layer-list>