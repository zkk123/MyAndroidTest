<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/com.zkk.view"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/music_background1"
    android:orientation="vertical"
    tools:context="com.music.activity.MusicListActivity">
  <RelativeLayout
      android:id="@+id/activity_music_list_temp1"
      android:layout_width="match_parent"
      android:layout_weight="@integer/music_tookbar"
      android:background="@drawable/seacher_item"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:alpha="0.5"
      android:gravity="center_vertical"
      android:layout_height="0dp"
      android:transitionName="shareNames">
    <TextView
        android:id="@+id/music_list_search"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent"
        android:text="搜索"
        android:gravity="center_vertical|right"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:text="本地"
        android:textSize="18dp"
        android:textColor="#000000"
        />
  </RelativeLayout>
  <ListView
      android:id="@+id/main_music_list_listview"
      android:layout_width="match_parent"
      android:layout_weight="@integer/music_list"
      android:layout_height="0dp"
      android:alpha="0.6"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp">

  </ListView>

  <include
      layout="@layout/music_bottem"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="@integer/music_bottem"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="10dp"

     >
  </include>
</LinearLayout>
