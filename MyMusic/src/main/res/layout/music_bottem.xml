<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/com.zkk.view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:orientation="horizontal"
        android:background="@drawable/seacher_item"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zkk.view.MarqueeView
                android:id="@+id/mMarqueeView"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#666666"
                app:textSize="13dp"
                android:text="my music"
                app:startPoint="end"
                app:isRepeat="false"
                app:direction="right"
                app:speed="5"
                android:layout_height="50dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/music_bottem_image_height_margin"
                android:layout_marginTop="@dimen/music_bottem_image_height_margin"
                android:src="@mipmap/next"
                android:layout_weight="@integer/bottem_image_weight"
                android:layout_centerVertical="true"
                android:id="@+id/next"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/music_bottem_image_height_margin"
                android:layout_marginTop="@dimen/music_bottem_image_height_margin"
                android:layout_weight="@integer/bottem_image_weight"
                android:layout_centerInParent="true"
                android:src="@mipmap/play"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
            <ImageView
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/music_bottem_image_height_margin"
                android:layout_marginTop="@dimen/music_bottem_image_height_margin"
                android:layout_weight="@integer/bottem_image_weight"
                android:layout_centerVertical="true"
                android:src="@mipmap/stop"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/play_type"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/liebiao_normal"
                android:layout_centerVertical="true"
                 />
        </RelativeLayout>
</LinearLayout>
