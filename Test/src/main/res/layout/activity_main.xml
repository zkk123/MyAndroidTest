    tools:context="com.example.com.myapplication.MainActivity">

<RelativeLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"

    >
    <RelativeLayout
        android:id="@+id/layout2"
